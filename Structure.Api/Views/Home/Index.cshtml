        Error ({{data.error.status}}). Gadget's weren't not loaded.
        <a href="#" class="alert-link">Click here to try again</a>
    </div>*@
    <ng-view />
    <script src="~/node_modules/angular/angular.min.js"></script>
<script src="~/node_modules/angular-route/angular-route.min.js"></script>
   <script src="~/App/Common/Filters/module.js"></script>
<script src="~/App/Common/Cart/cartModule.js"></script>
    <script src="~/App/Common/Validator/validatorModule.js"></script>
<script src="~/App/mainApp.js"></script>
<script src="~/App/Common/Cart/cartService.js"></script>
    <script src="~/App/Common/Validator/angular-validator.js"></script>
    <script src="~/App/Services/DataService.js"></script>
    <script src="~/App/Common/Cart/cartDetails.js"></script>
<script src="~/App/Controllers/gadgetStoreCtrl.js"></script>
<script src="~/App/Controllers/gadetsCtrl.js"></script>
    <script src="~/App/Controllers/checkoutCtrl.js"></script>
    <script src="~/App/Controllers/cartDetailsCtrl.js"></script>
<script src="~/App/Common/Filters/pageCountFilter.js"></script>
    <script src="~/App/Common/Filters/rangeFilter.js"></script>
</body>
</html>
